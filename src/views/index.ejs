<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Node JS Basic</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <ul class="nav nav-pills">
        <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="#">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">Link</a>
        </li>
    </ul>
    <h2 class="my-auto">List User Table</h2>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            <% for(let i=0; i < dataUser.length; i++) { %>
                <tr>
                    <th scope="row">
                        <%= dataUser[i].id %>
                    </th>
                    <td>
                        <%= dataUser[i].firstname %>
                    </td>
                    <td>
                        <%= dataUser[i].lastname %>
                    </td>
                    <td>
                        <a href="/detail/user/<%= dataUser[i].id %>" class="btn btn-outline-success">Detail</a>
                        <a href="" class="btn btn-outline-primary">Edit</a>
                        <a href="" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
                <% } %>
        </tbody>
    </table>

    <div class="mx-auto w-50 border rounded">
        <form action="create-new-user" method="post">
            <h2 class="text-center my-2">CREATE A NEW USER</h2>
            <div class="mt-3 px-2 w-75 mx-auto">
                <label for="firstname" class="form-label">Firstname</label>
                <input class="form-control" type="text" name="fname" placeholder="Enter your firstname">
            </div>

            <div class="mt-3 px-2 w-75 mx-auto">
                <label for="lastname" class="form-label">Lastname</label>
                <input class="form-control" type="text" name="lname" placeholder="Enter your lastname">
            </div>

            <div class="mt-3 px-2 w-75 mx-auto">
                <label for="address" class="form-label">Address</label>
                <input class="form-control" type="text" name="address" placeholder="Enter your address">
            </div>

            <div class="text-center my-2">
                <button type="submit" class="btn btn-outline-secondary">Submit</button>
            </div>
        </form>
    </div>
</body>

</html>